<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorPrimary"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/drawer_header_avatar"
        android:layout_width="@dimen/drawer_avatar_size"
        android:layout_height="@dimen/drawer_avatar_size"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/drawer_header_image_text_spacing"/>

    <TextView
        android:id="@+id/drawer_header_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/drawer_header_avatar"
        android:layout_marginBottom="@dimen/drawer_header_text_text_spacing"
        android:gravity="center"
        android:text="Username"
        android:textColor="@android:color/white"
        android:textSize="@dimen/abc_text_size_title_material"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/drawer_header_assoc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/drawer_header_username"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:gravity="center"
        android:text="Association"
        android:textColor="@android:color/white"
        android:textSize="@dimen/abc_text_size_subtitle_material_toolbar" />
</RelativeLayout>