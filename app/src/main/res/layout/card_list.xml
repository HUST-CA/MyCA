<?xml version="1.0" encoding="utf-8"?><!-- This list is used in RecentActivitiesFragment, NewsFragment and HistoryFragment -->

<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe_to_refresh_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/toolbar">

    <ListView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/list_of_cards"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@android:color/transparent"
        android:dividerHeight="@dimen/list_cards_divider_height"
        android:headerDividersEnabled="true"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin" />
</android.support.v4.widget.SwipeRefreshLayout>