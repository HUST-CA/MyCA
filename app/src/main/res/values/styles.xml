<resources>

    <!-- No statusBarColor available under v21 -->
    <style name="AppTheme" parent="AppBaseTheme" />

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#db4437</item>
        <item name="colorPrimaryDark">#c53929</item>
        <item name="colorAccent">?attr/colorPrimary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextAppearance.ExpandedCollapsingBar" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textColor">#deffffff</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="TextAppearance.CollapsedCollapsingBar" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textColor">#deffffff</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>
